<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<item android:state_enabled="false" android:drawable="@drawable/invoice_np_button_2"></item>-->
    <!--<item android:state_pressed="true" android:drawable="@drawable/invoice_np_button_2"></item>-->
    <!--<item android:drawable="@drawable/invoice_np_button"></item>-->

    <item android:state_enabled="false" >
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:angle="-90" android:startColor="@color/button_disable_light" android:endColor="@color/button_disable_dark"/>
            <stroke android:color="#FFF" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:angle="-90" android:startColor="@color/button_press_light" android:endColor="@color/button_press_dark"/>
            <stroke android:color="#FFF" android:width="1dp"/>
        </shape>
    </item>
    <item >
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:angle="-90" android:startColor="@color/button_light" android:endColor="@color/button_dark"/>
            <stroke android:color="#FFF" android:width="1dp"/>
        </shape>
    </item>

</selector>